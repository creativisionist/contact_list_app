<h1>Contacts</h1>
<% @groups.each do |group| %>
  <p><a href="/contacts?group=<%= group.name %>"><%= group.name %></a></p>
<% end %>

<%= link_to "Add New Contact", "/contacts/new" %>

  <% @contacts.each do |contact| %>
    <h2><%= contact.first_name %> <%= contact.middle_name %> <%= contact.last_name %></h2>
    <h3><%= contact.email %></h3>
    <h3><%= contact.phone_number %></h3>
    <p><%= contact.bio %></p>
  <% end %>
